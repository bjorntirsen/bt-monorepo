{
  "name": "bt-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "test:browser-based": "turbo run test:browser-based",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "db:generate": "pnpm --filter @repo/db drizzle:generate",
    "db:migrate": "pnpm --filter @repo/db drizzle:migrate",
    "db:update": "pnpm run db:generate && pnpm run db:migrate"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@repo/eslint-config": "workspace:*",
    "eslint": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.18.3"
}
